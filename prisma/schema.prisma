generator client {
  provider = "prisma-client" 
  output = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Film {
  id Int @id @default(autoincrement())
  title String
  description String?
  director String
} 

model Serie {
  id Int @id @default(autoincrement())
  title String
  description String?
  season Int
  director String
  episodes Episode[]
}

model Episode {
  id Int @id @default(autoincrement())
  title String
  duration Int
  views Int
  serieId Int
  serie Serie @relation(fields: [serieId], references: [id])
}